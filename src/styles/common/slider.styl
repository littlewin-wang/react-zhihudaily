.swiper-container
  max-width: 640px
  height: 640px

.swiper-slide
  position: relative
  cursor: pointer
  img[lazy=loading]
    position: absolute
    width: 440px
    height: 290px
    left: 50%
    top: 50%
    margin-left: -220px
    margin-top: -145px
  p
    width: 70%
    word-wrap: break-word
    position: absolute
    text-align: center
    bottom: 30px
    left: 15%
    color: #fff
    cursor: pointer
